#include <iostream>
#include <stdio.h>
#include <ctime>
using namespace std;

int main()
{
    setlocale(LC_ALL, "ru");
    int const size = 30;
    int arr[size];
    srand(time(NULL));
    bool r;
    for (int i = 0;i < size;)
    {
        r = false;
        int newP = rand() % 30;
        for (int j = 0;j < i;j ++)
        {
            if (arr[j] == newP)
            {
                r = true;
                break;
            }
        }
        if (r == false)
        {
            arr[i] = newP;
            i++;
        }
    }
    for (int i = 0;i < size;i++)
    {
        cout << arr[i] << endl;
    }

    int min=arr[0];
    for (int i = 1;i < size;i++)
    {
        if (arr[i] < min)
        {
            min = arr[i];

        }
    }
    cout<<"\n" << "Минимальное значение:" << min << endl;
}
